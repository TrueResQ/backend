{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend apis for torus wallet",
  "main": "index.js",
  "scripts": {
    "dev": "docker-compose -f docker-compose.dev.yml up --build",
    "down": "docker-compose -f docker-compose.dev.yml down",
    "serve": "nodemon --config nodemon.json src/index.ts",
    "build": "rimraf ./dist && tsc",
    "start": "ts-node src/index.ts",
    "prod": "node dist/src/index.js",
    "migrate": "npx knex migrate:unlock --knexfile ./src/database/knexfile.ts && npx knex migrate:latest --knexfile ./src/database/knexfile.ts",
    "migrate:down": "npx knex migrate:down --knexfile ./src/database/knexfile.ts",
    "lint:ts": "eslint --fix 'src/**/*.ts'",
    "posttest": "docker-compose -f docker-compose-ci.yml down",
    "test:ci": "docker-compose -f docker-compose-ci.yml up --build --abort-on-container-exit --exit-code-from torus-backend",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/torusresearch/torus-backend.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/torusresearch/torus-backend/issues"
  },
  "homepage": "https://github.com/torusresearch/torus-backend#readme",
  "dependencies": {
    "@babel/runtime": "^7.20.1",
    "@mailchimp/mailchimp_transactional": "^1.0.50",
    "@sendgrid/mail": "^7.7.0",
    "@sentry/node": "^7.20.1",
    "@sentry/tracing": "^7.20.1",
    "@toruslabs/fetch-node-details": "^8.1.0",
    "@toruslabs/loglevel-sentry": "^4.0.0",
    "@toruslabs/torus.js": "^6.2.0",
    "@unstoppabledomains/resolution": "^8.3.3",
    "airtable": "^0.11.5",
    "async-mutex": "^0.3.2",
    "axios": "^0.27.2",
    "bignumber.js": "^9.1.0",
    "celebrate": "^15.0.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "debug": "^4.3.4",
    "deepmerge": "^4.2.2",
    "dotenv": "^16.0.3",
    "ethereumjs-util": "^7.1.5",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
